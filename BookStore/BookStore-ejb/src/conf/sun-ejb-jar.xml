<sun-ejb-jar>
  <enterprise-beans>
    <ejb>
      <ejb-name>Customer</ejb-name>
      <jndi-name>ejb/Customer</jndi-name>
      <resource-ref>
        <res-ref-name>bookstoredb</res-ref-name>
        <jndi-name>jdbc/myBookStore</jndi-name>
      </resource-ref>
    </ejb>
    <ejb>
      <ejb-name>Users</ejb-name>
      <resource-ref>
        <res-ref-name>bookstoredb</res-ref-name>
        <jndi-name>jdbc/myBookStore</jndi-name>
      </resource-ref>
    </ejb>
    <ejb>
      <ejb-name>Comment</ejb-name>
      <resource-ref>
        <res-ref-name>bookstoredb</res-ref-name>
        <jndi-name>jdbc/myBookStore</jndi-name>
      </resource-ref>
    </ejb>
    <ejb>
      <ejb-name>Orders</ejb-name>
      <resource-ref>
        <res-ref-name>bookstoredb</res-ref-name>
        <jndi-name>jdbc/myBookStore</jndi-name>
      </resource-ref>
    </ejb>
    <ejb>
      <ejb-name>OrderLine</ejb-name>
      <resource-ref>
        <res-ref-name>bookstoredb</res-ref-name>
        <jndi-name>jdbc/myBookStore</jndi-name>
      </resource-ref>
    </ejb>
    <cmp-resource>
      <jndi-name>jdbc/bookstore</jndi-name>
    </cmp-resource>
  </enterprise-beans>
</sun-ejb-jar>
